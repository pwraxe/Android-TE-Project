<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/fe_tool"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/fe_back"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@color/colorPrimary"
            android:scaleType="fitXY"
            android:src="@drawable/back_button"
            tools:srcCompat="@drawable/back_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="#000000"
            android:text="@string/fe"
            android:layout_marginLeft="50sp"
            />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#BCDEFA"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:src="@drawable/header_logo" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fe"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#0000FF"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="10sp"
                android:scaleType="centerCrop"
                android:src="@drawable/fe_hod"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prof. S.T. Karle (HOD)"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textColor="#0040FF"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="M. Sc.(Mathematics)"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:textColor="#0040FF"
                />

            <TextView
                android:id="@+id/OnlyForHorizontal_line1"
                android:layout_width="370sp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:background="#000000"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOD Desk"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textColor="#0040FF"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fe_line1"
                android:gravity="center"
                 android:textColor="#0040ff"
                android:fontFamily="sans-serif-condensed"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fe_line2"
                android:gravity="center"
                android:textColor="#0040ff"
                android:fontFamily="sans-serif-condensed"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fe_line3"
                android:gravity="center"
                android:textColor="#0040ff"
                android:fontFamily="sans-serif-condensed"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="#000000"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:background="#000000"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="@string/quick_links_to_follow_us"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/facebook_id"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="50sp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:background="#000000"
                        android:src="@drawable/fb" />

                    <ImageButton
                        android:id="@+id/google_id"
                        android:layout_width="68dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="50sp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="15sp"
                        android:background="#000000"
                        android:src="@drawable/google_plus" />

                    <ImageButton
                        android:id="@+id/twitter_id"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="50sp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:background="#000000"
                        android:src="@drawable/twitter_image" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </ScrollView>


</LinearLayout>
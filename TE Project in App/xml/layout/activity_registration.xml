<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/registration_drawer"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#BCDEFA"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/registration_toolbar"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/header_logo"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student Registration Center"
                    android:layout_marginTop="20sp"
                    android:textSize="26sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textColor="#0040ff"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2018 - 2019"
                    android:layout_marginTop="20sp"
                    android:textSize="26sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textColor="#0040ff"
                    />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="20sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="20sp"
                    app:cardElevation="15sp"
                    app:cardMaxElevation="15dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pune Univercity"
                            android:layout_marginTop="20sp"
                            android:textSize="26sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:textColor="#0040ff"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/clg_name"
                            android:layout_marginTop="10sp"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:textColor="#0040ff"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="by,"
                            android:layout_marginTop="10sp"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:textColor="#0040ff"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="INFORMATION TECHNOLOGY"
                            android:layout_marginTop="10sp"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="serif"
                            android:textColor="#0040ff"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginTop="10sp"
                            android:background="#0040ff"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/firstName"
                            android:textSize="25sp"
                            android:layout_margin="10sp"
                            android:layout_marginTop="10sp"
                            android:textColor="#6373C9"
                            />

                        <EditText
                            android:id="@+id/fname_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/firstHint"
                            android:inputType="text"
                            android:layout_margin="10sp"
                            android:maxLength="10"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/middleName"
                            android:textSize="25sp"
                            android:layout_margin="10sp"
                            android:layout_marginTop="10sp"
                            android:textColor="#6373C9"
                            />

                        <EditText
                            android:id="@+id/mname_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/middleHint"
                            android:layout_margin="10sp"
                            android:inputType="text"
                            android:maxLength="10"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/lastName"
                            android:textSize="25sp"
                            android:layout_margin="10sp"
                            android:layout_marginTop="10sp"
                            android:textColor="#6373C9"
                            />

                        <EditText
                            android:id="@+id/lname_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/lastHint"
                            android:inputType="text"
                            android:layout_margin="10sp"
                            android:maxLength="10"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:textSize="25sp"
                            android:layout_margin="10sp"
                            android:layout_marginTop="10sp"
                            android:textColor="#6373C9"
                            />

                        <EditText
                            android:id="@+id/email_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/emailHint"
                            android:layout_margin="10sp"
                            android:inputType="textEmailAddress"
                            android:maxLength="50"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mobile"
                            android:textSize="25sp"
                            android:layout_margin="10sp"
                            android:layout_marginTop="10sp"
                            android:textColor="#6373C9"
                            />

                        <EditText
                            android:id="@+id/mobile_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/mobileHint"
                            android:inputType="number"
                            android:layout_margin="10sp"
                            android:maxLength="10"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/branch"
                            android:textSize="25sp"
                            android:layout_margin="10sp"
                            android:layout_marginTop="10sp"
                            android:textColor="#6373C9"
                            />

                        <Spinner
                            android:id="@+id/branch_id"
                            android:layout_margin="10sp"
                            android:layout_width="match_parent"
                            android:layout_height="50sp">
                        </Spinner>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/DOB"
                            android:textSize="25sp"
                            android:layout_margin="10sp"
                            android:layout_marginTop="10sp"
                            android:textColor="#6373C9"
                            />

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:orientation="horizontal"
                           android:layout_margin="10sp"
                           android:layout_height="wrap_content">


                           <Spinner
                               android:id="@+id/DOB_spinnerForDay_id"
                               android:layout_width="100sp"
                               android:layout_marginLeft="10sp"
                               android:layout_height="50sp"/>

                           <Spinner
                               android:id="@+id/DOB_spinnerForMonth_id"
                               android:layout_width="150sp"
                               android:layout_height="50sp"/>

                           <Spinner
                               android:id="@+id/DOB_spinnerForYear_id"
                               android:layout_width="130sp"
                               android:layout_height="50sp"/>

                       </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/todaysDate"
                            android:textSize="25sp"
                            android:layout_margin="10sp"
                            android:layout_marginTop="10sp"
                            android:textColor="#6373C9"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_margin="10sp"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:id="@+id/TD_spinnerForDay_id"
                                android:layout_width="100sp"
                                android:layout_marginLeft="10sp"
                                android:layout_height="50sp"/>

                            <Spinner
                                android:id="@+id/TD_spinnerForMonth_id"
                                android:layout_width="150sp"
                                android:layout_height="50sp"/>

                            <Spinner
                                android:id="@+id/TD_spinnerForYear_id"
                                android:layout_width="130sp"
                                android:layout_height="50sp"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginTop="10sp"
                            android:background="#0040ff"
                            />

                        <Button
                            android:layout_width="250sp"
                            android:textColor="#ffffff"
                            android:id="@+id/register_button"
                            android:layout_height="wrap_content"
                            android:text="Register"
                            android:background="#2c6a91"
                            android:layout_gravity="center"
                            android:layout_marginTop="20sp"
                            />

                        <Button
                            android:layout_width="250sp"
                            android:id="@+id/displayData_button"
                            android:layout_height="wrap_content"
                            android:text="Display Data"
                            android:textColor="#ffffff"
                            android:background="#4169E1"
                            android:layout_gravity="center"
                            android:layout_marginTop="20sp"
                            android:layout_marginBottom="20sp"
                            />

                        <Button
                            android:layout_width="250sp"
                            android:id="@+id/update_button"
                            android:layout_height="wrap_content"
                            android:text="Update Data"
                            android:textColor="#ffffff"
                            android:background="#152cd8"
                            android:layout_gravity="center"
                            android:layout_marginTop="6sp"
                            android:layout_marginBottom="50sp"
                            />













                    </LinearLayout>





                </android.support.v7.widget.CardView>






            </LinearLayout>




        </ScrollView>




    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/registration_navigation"
        android:layout_width="300sp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_list"
        app:headerLayout="@layout/header_menu"
        />

</android.support.v4.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:id="@+id/reach_drawer"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#BCDEFA"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/reach_toolbar"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/header_logo"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:fontFamily="serif"
                    android:textColor="#0040ff"
                    />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="25sp"
                    app:cardElevation="10dp"
                    android:layout_margin="10sp"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address : "
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="25sp"
                            android:textColor="#000000"
                            android:layout_marginTop="10sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/svitAddress"
                            android:textSize="20sp"
                            android:layout_marginTop="10sp"
                            android:gravity="center"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#000000"
                            android:layout_marginTop="10sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone : "
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="25sp"
                            android:layout_marginTop="10sp"
                            android:textColor="#000000"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/svitMobileNo"
                            android:gravity="center"
                            android:layout_marginTop="10sp"
                            android:textSize="21sp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#000000"
                            android:layout_marginTop="10sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fax : "
                            android:textStyle="bold"
                            android:layout_marginTop="10sp"
                            android:layout_gravity="center"
                            android:textSize="25sp"
                            android:textColor="#000000"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="91 2551 271277"
                            android:layout_marginTop="10sp"
                            android:textSize="20sp"
                            android:gravity="center"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#000000"
                            android:layout_marginTop="10sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email : "
                            android:layout_marginTop="10sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="25sp"
                            android:textColor="#000000"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:text="@string/svitEmail"
                            android:textSize="20sp"
                            android:layout_marginBottom="10sp"
                            android:gravity="center"
                            />





                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:textSize="30sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textColor="#000000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2sp" 
                    android:background="#000000"
                    />
                
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25sp"
                    app:cardElevation="10dp"
                    android:layout_margin="10sp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="10sp"
                        android:layout_height="wrap_content">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#ff0000"
                            android:text="Get in touch with us"
                            android:textSize="25sp"
                            android:gravity="center"
                            android:fontFamily="serif"
                            android:layout_marginTop="10sp"
                            />


                        <!-- =======================Form Start==============================  -->

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="First Name : "
                            android:textSize="25sp"
                            android:layout_marginTop="10sp"
                            />

                        <EditText
                            android:id="@+id/contact_fname_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter First Name "
                            android:inputType="text"
                            android:maxLength="20"
                            android:layout_marginTop="10sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last Name : "
                            android:textSize="25sp"
                            android:layout_marginTop="10sp"
                            />

                        <EditText
                            android:id="@+id/contact_lname_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter First Name "
                            android:inputType="text"
                            android:maxLength="20"
                            android:layout_marginTop="10sp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mobile No : "
                            android:textSize="25sp"
                            android:layout_marginTop="10sp"
                            />

                        <EditText
                            android:id="@+id/contact_mobile_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter valid Mobile No "
                            android:inputType="number"
                            android:maxLength="10"
                            android:layout_marginTop="10sp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email ID : "
                            android:textSize="25sp"
                            android:layout_marginTop="10sp"
                            />

                        <EditText
                            android:id="@+id/contact_email_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter valid Email ID "
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="10sp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Today's Date : "
                            android:textSize="25sp"
                            android:layout_marginTop="10sp"
                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">


                            <Spinner
                                android:id="@+id/contact_day_id"
                                android:layout_width="90sp"
                                android:layout_marginLeft="10sp"
                                android:layout_height="50sp"/>

                            <Spinner
                                android:id="@+id/contact_month_id"
                                android:layout_width="150sp"
                                android:layout_height="50sp"/>

                            <Spinner
                                android:id="@+id/contact_year_id"
                                android:layout_width="130sp"
                                android:layout_height="50sp"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Comments : "
                            android:textSize="25sp"
                            android:layout_marginTop="10sp"
                            />

                        <EditText
                            android:id="@+id/contact_comment_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/commentHint"
                            android:inputType="text"
                            android:layout_marginTop="10sp"
                            />

                        <Button
                            android:id="@+id/submitButton"
                            android:layout_width="250sp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:background="#0040ff"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:layout_margin="10sp"
                            android:text="Submit"
                            android:textColor="#ffffff"
                            />


                    </LinearLayout>
                    
                    
                    
                </android.support.v7.widget.CardView>




                <!-- u can put link here   -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="#000000"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:background="#000000"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="@string/quick_links_to_follow_us"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/facebook_id"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="50sp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:background="#000000"
                        android:src="@drawable/fb" />

                    <ImageButton
                        android:id="@+id/google_id"
                        android:layout_width="68dp"
                        android:layout_height="65dp"
                        android:layout_marginLeft="50sp"
                        android:scaleType="fitXY"
                        android:layout_marginTop="15sp"
                        android:background="#000000"
                        android:src="@drawable/google_plus" />

                    <ImageButton
                        android:id="@+id/twitter_id"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="50sp"
                        android:background="#000000"
                        android:src="@drawable/twitter_image" />


                </LinearLayout>


            </LinearLayout>

            </LinearLayout>







        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/reach_navigation"
        android:layout_width="300sp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_list"
        app:headerLayout="@layout/header_menu"
        />

</android.support.v4.widget.DrawerLayout>
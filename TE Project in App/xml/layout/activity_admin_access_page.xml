<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:id="@+id/admin_drawer"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#BCDEFA"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/admin_toolbar"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.Toolbar>




        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/header_logo"
            />

        <android.support.v7.widget.CardView

            android:id="@+id/displayAllData_id"
            android:layout_width="300sp"
            android:layout_height="100sp"
            app:cardCornerRadius="5sp"
            app:cardElevation="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="30sp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Displya all Data"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:fontFamily="serif"
                />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/delete_id"
            android:layout_width="250sp"
            android:layout_height="100sp"
            app:cardCornerRadius="5sp"
            app:cardElevation="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Data"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:fontFamily="serif"
                />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/enquiry_id"
            android:layout_width="250sp"
            app:cardElevation="15sp"
            android:layout_height="100sp"
            app:cardCornerRadius="5sp"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enquiry Data"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:fontFamily="serif"
                />


        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/admin_navigation"
        android:layout_width="300sp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_list"
        app:headerLayout="@layout/header_menu"
        />

</android.support.v4.widget.DrawerLayout>